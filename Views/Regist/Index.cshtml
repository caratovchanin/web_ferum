@using Microsoft.EntityFrameworkCore.Metadata;
@using Microsoft.AspNetCore.Authorization;
@using System.Collections;
@using System.Security.Claims
@using webFerum.Models.AppContext;
@using webFerum.Service;

@inject IAuthorizationService AuthorizationService
@inject UserService userService
@inject RoleService roleServ;

@{
    ViewData["Title"] = "Регистрация";
    var res = await AuthorizationService.AuthorizeAsync(User, "Admin");
    string actionPath = res.Succeeded ? "/Regist/Add" : "/Regist/Reg";
}

<form action=@actionPath onsubmit="return validateForm()" method="post">
    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <div class="form-group row">
                    <label for="Name" class="col-sm-3 col-form-label">Имя:</label>
                    <div class="col-sm-9">
                        <input type="text" id="name" name="Name" class="form-control mb-3" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Surname" class="col-sm-3 col-form-label">Фамилия:</label>
                    <div class="col-sm-9">
                        <input type="text" id="surname" name="Surname" class="form-control mb-3" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Lastname" class="col-sm-3 col-form-label">Отчество:</label>
                    <div class="col-sm-9">
                        <input type="text" id="lastname" name="Lastname" class="form-control mb-3" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Number" class="col-sm-3 col-form-label">Номер телефона:</label>
                    <div class="col-sm-9">
                        <input type="text" id="number" name="Number" class="form-control mb-3" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Email" class="col-sm-3 col-form-label">Почта:</label>
                    <div class="col-sm-9">
                        <input type="text" id="email" name="Email" class="form-control mb-3" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Password" class="col-sm-3 col-form-label">Пароль:</label>
                    <div class="col-sm-9">
                        <input type="password" id="password" name="Password" class="form-control mb-3" required>
                    </div>
                </div>
                @if (res.Succeeded)
                {
                    <div class="form-group row">
                        <label for="Role" class="col-sm-3 col-form-label">Должность:</label>
                        <div class="col-sm-9">
                            <select class="form-control mb-3" id="Role" name="Role" required>
                                <option value="">Выберите должность</option>
                                @foreach (Role r in await roleServ.GetRolesAsync())
                                {
                                    <option value="@r.Id">@r.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                }
                <div class="form-group row">
                    <div class="col-sm-9 offset-sm-3">
                        <input class="btn btn-primary" type="submit" value="Подтвердить">
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    function validateForm() {
        var email = document.getElementById("email").value;
        var password = document.getElementById("password").value;
        var number = document.getElementById("number").value;
        var name = document.getElementById("name").value;
        var lastname = document.getElementById("lastname").value;
        var surname = document.getElementById("surname").value;

        var errorMessages = [];

        if (!email.trim()) {
            errorMessages.push("Введите почту.");
        }
        if (!password.trim()) {
            errorMessages.push("Введите пароль.");
        }
        if (!number.trim()) {
            errorMessages.push("Введите номер.");
        }
        if (!name.trim()) {
            errorMessages.push("Введите имя.");
        }
        if (!lastname.trim()) {
            errorMessages.push("Введите отчество.");
        }
        if (!surname.trim()) {
            errorMessages.push("Введите фамилия.");
        }

        if (errorMessages.length > 0) {
            alert(errorMessages.join("\n"));
            return false;
        }

        return true;
    }
</script>
