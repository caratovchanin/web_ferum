@using Microsoft.AspNetCore.Authorization
@using webFerum.Models.AppContext;
@using webFerum.Models;
@using webFerum.Service;
@using Microsoft.EntityFrameworkCore.Metadata;
@using System.Collections;

@inject IAuthorizationService AuthorizationService
@inject ItemService itemService

@inject IAuthorizationService AuthorizationService
@inject ItemService itemService

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title mb-4">Редактирование товара</h2>
            <form action="/Item/Update" method="post">
                <input type="hidden" name="Id" value="@Model.Id" required>
                <div class="mb-3">
                    <label for="Name" class="form-label">Название <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required>
                </div>
                <div class="mb-3">
                    <label for="Img" class="form-label">Картинка <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="Img" name="Img" value="@Model.Img" required>
                </div>
                <div class="mb-3">
                    <label for="Cost" class="form-label">Цена <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="Cost" name="Cost" value="@Model.Cost" required>
                </div>
                <div class="mb-3">
                    <label for="Description" class="form-label">Описание <span class="text-danger">*</span></label>
                    <textarea class="form-control" id="Description" name="Description" rows="3" required>@Model.Description</textarea>
                </div>
                <div class="d-flex justify-content-end">
                    <input class="btn btn-primary" type="submit" value="Сохранить">
                </div>
            </form>
        </div>
    </div>
</div>
